{
  "scripts": {
    "start": "npm run build-css && flask --app app run --port=1337",
    "dev": "npm run build-css-live & flask --app app run --port=1337 --debug",
    "build-css": "tailwindcss -i ./app/static/css/src/input.css -o ./app/static/css/dist/output.css",
    "build-css-live": "tailwindcss -i ./app/static/css/src/input.css -o ./app/static/css/dist/output.css --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "flowbite": "^2.5.2"
  }
}
